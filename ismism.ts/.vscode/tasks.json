{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "source build.zsh release",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "test",
			"type": "shell",
			"command": "source build.zsh test; sleep 1; http-server --logger -h 0.0.0.0 target",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		}
	]
}

